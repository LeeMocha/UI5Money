<mvc:View controllerName="money.controller.Page"
xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:ux="sap.uxap"
	xmlns:core="sap.ui.core"
    >
    <Page id="page" title="{i18n>title}">
        <content>
            <f:SimpleForm id="InsuranceEdit"
			editable="true"
			layout="ColumnLayout"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
				<core:Title text="가계부" />
				<Label text="구분" />
				<Select
					selectedKey="{viewModel/Type}"
					editable="{pageModel>/editable}"
					items="{
						path: 'selectModel>/'
					}">
					<core:Item key="{selectModel>Key}" text="{selectModel>Text}" />
				</Select>
				<Label text="제목" />
				<Input value="{viewModel>/Title}" editable="{pageModel>/editable}" />
				<Label text="내용" />
				<TextArea cols="5" value="{viewModel>/Content}" editable="{pageModel>/editable}"></TextArea>
				<Label text="금액" />
				<Input value="{viewModel>/Amount}" editable="{pageModel>/editable}" />
			</f:content>
		</f:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSeparator ></ToolbarSeparator>
                <Button text="{pageModel>/buttonText}" type="Emphasized" press=".onSave"></Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>